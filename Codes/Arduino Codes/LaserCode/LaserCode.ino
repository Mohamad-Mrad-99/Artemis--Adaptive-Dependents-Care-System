pinMode(STEPPER_PIN_2, OUTPUT);
pinMode(STEPPER_PIN_3, OUTPUT);
pinMode(STEPPER_PIN_4, OUTPUT);
pinMode(Laser_PIN_5, OUTPUT); // Set digital pin 13 as an output


}

void loop() {
  digitalWrite(Laser_PIN_5, HIGH); // Turn on the laser
  delay(1000); // Wait for 1 second
  for(int a=0;a<250;a++){
    OneStep(false);
    delay(7);
  }
  delay(1000);
  for(int a=0;a<250;a++){
    OneStep(true);
    delay(7);
  }
  delay(1000);
  for(int a=0;a<250;a++){
    OneStep(true);
    delay(7);
  }
  delay(1000);
  for(int a=0;a<250;a++){
    OneStep(false);
    delay(7);
  }
  delay(1000);
}




